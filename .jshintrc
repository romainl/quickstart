{
    // http://jshint.com/docs/

    // Enforcing options
    "bitwise"       : true,
    "curly"         : true,
    "eqeqeq"        : true,
    "esversion"     : 6,
    "forin"         : true,
    "freeze"        : true,
    "funcscope"     : false,
    "futurehostile" : true,
    "iterator"      : true,
    "latedef"       : true,
    "maxcomplexity" : false,
    "maxdepth"      : false,
    "maxerr"        : 50,
    "maxparams"     : false,
    "maxstatements" : false,
    "noarg"         : true,
    "nocomma"       : false,
    "nonbsp"        : true,
    "nonew"         : true,
    "notypeof"      : false,
    "shadow"        : false,
    "singleGroups"  : true,
    "strict"        : false,
    "undef"         : true,
    "unused"        : true,
    "varstmt"       : false,

    // Relaxing options
    "asi"           : false,
    "boss"          : false,
    "debug"         : true,
    "elision"       : false,
    "eqnull"        : false,
    "evil"          : true,
    "expr"          : false,
    "lastsemic"     : false,
    "loopfunc"      : false,
    "moz"           : false,
    "noyield"       : false,
    "plusplus"      : false,
    "proto"         : false,
    "scripturl"     : false,
    "supernew"      : false,
    "validthis"     : true,
    "withstmt"      : false,

    // Environments
    "browser"       : true,
    "browserify"    : true,
    "couch"         : false,
    "devel"         : true,
    "dojo"          : false,
    "jasmine"       : false,
    "jquery"        : true,
    "mocha"         : false,
    "module"        : false,
    "mootools"      : false,
    "node"          : true,
    "nonstandard"   : false,
    "phantom"       : false,
    "prototypejs"   : false,
    "qunit"         : false,
    "rhino"         : false,
    "shelljs"       : false,
    "typed"         : false,
    "worker"        : false,
    "wsh"           : false,
    "yui"           : false,

    // Custom Globals
    "globals"       : {}
}
